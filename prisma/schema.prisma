generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id        String    @id
  email     String    @unique
  password  String
  name      String?
  surname   String?
  habits    habits[]
  profile   profiles?
  createdAt DateTime  @map("created_at")
  updatedAt DateTime  @map("updated_at")
}

enum Month {
  january
  february
  march
  april
  may
  june
  july
  august
  september
  october
  november
  december
}

model habits {
  id        String   @id
  year      Int
  month     Month
  date      String
  day       Int
  habit     String
  note      String?
  complete  Boolean
  createdAt DateTime @map("created_at")
  updatedAt DateTime @map("updated_at")
  user      users    @relation(fields: [userId], references: [id])
  userId    String   @map("user_id")
}

model profiles {
  id     String @id
  bio    String
  user   users  @relation(fields: [userId], references: [id])
  userId String @map("user_id")
}
